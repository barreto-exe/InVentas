<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ListaProductosVenta">

    <include
        android:id="@+id/seleccionToolbar"
        layout="@layout/view_crear_bar"
        android:theme="@style/Theme.InVentas" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listaProductos_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seleccionToolbar" />

    <fragment
        android:id="@+id/carrito_descripcion_fragment"
        android:name="com.teamihc.inventas.fragments.CarritoDescripcionFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout="@layout/fragment_carrito_descripcion">

    </fragment>

</androidx.constraintlayout.widget.ConstraintLayout>
